{
	"$schema": "https://biomejs.dev/schemas/1.6.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["**/dist/*", "**/types/*"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": { "noExplicitAny": "off" },
			"complexity": { "noForEach": "off" },
			"style": {
				"noNonNullAssertion": "off",
				"useNodejsImportProtocol": "off",
				"noParameterAssign": "off"
			}
		}
	}
}
